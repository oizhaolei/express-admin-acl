mixin user-login-dialog
  #myModal.modal.fade(role="dialog")
    .modal-dialog
      .modal-content
        .modal-header(style="padding:35px 50px;")
          button.close(type="button" data-dismiss="modal") &times;
          h4
            span.glyphicon.glyphicon-lock Login
        .modal-body(style="padding:40px 50px;")
          form.form-signin(action='/login', method='POST' role="form")
            .form-group
              label(for="usrname")
                span.glyphicon.glyphicon-user
                | Username
              input#username.form-control(type="text" name='username' placeholder="Enter email")
            .form-group
              label(for="psw")
                span.glyphicon.glyphicon-eye-open
                | Password
              input#password.form-control(type="password" name='password' placeholder="Enter password")
            .checkbox
              label
                input(type="checkbox" value="" checked="true")
                | Remember me
              button.btn.btn-success.btn-block(type="submit")
                span.glyphicon.glyphicon-off
                | Login</button>
        .modal-footer
          button.btn.btn-danger.btn-default.pull-left(type="submit" data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            | Cancel
          p Not a member?
            a(href="/signup") Sign Up
          p Forgot
            a(href="/forgetpassword") Password?
