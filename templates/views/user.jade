extends ../layouts/default

block content
  form#frmuser(class='form-horizontal', action='/api/users', method='POST')
    input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
    input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
    input(type='email', name='email', class='form-control', placeholder='Email',required)
    input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
    input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
    button(class='btn btn-default', type='submit') Save
    button(class='btn btn-default', type='submit') Remove

  ul(class="nav nav-tabs")
    li(class="active")
      a(class="nav nav-tabs" data-toggle="tab" href="#roles") Roles
    li
      a(class="nav nav-tabs" data-toggle="tab" href="#resources") Resources
    li
      a(class="nav nav-tabs" data-toggle="tab" href="#permissions") Permissions

  div(class="tab-content")
    div#roles(class="tab-pane fade in active")
      h3 Roles
      p Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    div#resources(class="tab-pane fade")
      h3 Resources
      p Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    div#permissions(class="tab-pane fade")
      h3 Permissions
      p Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
  //- scripts
  script(src='/js/views/user.js')
  script(type='text/javascript').
    $('document').ready(function () {
      $.ajax( {
        url: '/api/users/#{user_id}'
      }).then(function(data) {
        populate($('#frmuser'), data);
      });
    });
