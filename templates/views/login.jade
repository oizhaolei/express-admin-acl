extends ../layouts/default

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h3.text-center.login-title Sign in to our Passport app
          form.form-signin(action='/login', method='POST' role="form")
            .form-group
              label(for="usrname")
                span.glyphicon.glyphicon-user
                | Username
              input#username.form-control(type="text" name='username' placeholder="Enter email")
            .form-group
              label(for="psw")
                span.glyphicon.glyphicon-eye-open
                | Password
              input#password.form-control(type="password" name='password' placeholder="Enter password")
            .checkbox
              label
                input(type="checkbox" value="" checked="true")
                | Remember me
              button.btn.btn-success.btn-block(type="submit")
                span.glyphicon.glyphicon-off
                | Login</button>
        .modal-footer
          button.btn.btn-danger.btn-default.pull-left(type="submit" data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            | Cancel
          p Not a member?
            a(href="/signup") Sign Up
          p Forgot
            a(href="/forgetpassword") Password?
        #message
        if message
          h1.text-center.error-message #{message}